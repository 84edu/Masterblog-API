{
  "swagger": "2.0",
  "info": {
    "title": "Masterblog API",
    "version": "1.0.0"
  },
  "servers": [{ "url": "http://localhost:5002" }],
  "tags": [
    { "name": "Post", "description": "Post API - CRUD" }
  ],
  "paths": {
    "/posts": {
      "get": {
        "summary": "Returns all posts",
        "produces": ["application/json"],
        "tags": ["Post"],
        "parameters": [
          { "name": "sort", "in": "query", "type": "string", "description": "Field to sort by (title, content)" },
          { "name": "direction", "in": "query", "type": "string", "enum": ["asc", "desc"], "description": "Direction of sorting" },
          { "name": "page", "in": "query", "type": "integer", "default": 1, "description": "Page number" },
          { "name": "limit", "in": "query", "type": "integer", "default": 10, "description": "Number of items per page" }
        ],
        "responses": {
          "200": { "description": "Successful operation" },
          "400": { "description": "Invalid query parameters" }
        }
      },
      "post": {
        "summary": "Create a new post",
        "tags": ["Post"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["title", "content"],
              "properties": {
                "title": { "type": "string", "example": "My First Post" },
                "content": { "type": "string", "example": "Hello world!" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Post created successfully" },
          "400": { "description": "Invalid input data" }
        }
      }
    },
    "/posts/{id}": {
      "put": {
        "summary": "Update an existing post",
        "tags": ["Post"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "integer", "description": "ID of the post to update" },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "content": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Post updated successfully" },
          "404": { "description": "Post not found" }
        }
      },
      "delete": {
        "summary": "Delete a post",
        "tags": ["Post"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "integer", "description": "ID of the post to delete" }
        ],
        "responses": {
          "200": { "description": "Post deleted successfully" },
          "404": { "description": "Post not found" }
        }
      }
    },
    "/posts/search": {
      "get": {
        "summary": "Search posts",
        "description": "Find posts by matching title or content strings.",
        "tags": ["Post"],
        "parameters": [
          { "name": "title", "in": "query", "type": "string", "description": "Search term for the title" },
          { "name": "content", "in": "query", "type": "string", "description": "Search term for the content" }
        ],
        "responses": {
          "200": { "description": "Search results returned" }
        }
      }
    }
  }
}